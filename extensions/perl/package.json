{
  "name": "perl",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.0",
  "publisher": "vscode",
  "license": "MIT",
  "engines": {
    "vscode": "*"
  },
  "scripts": {
    "update-grammar": "node ../node_modules/vscode-grammar-updater/bin textmate/perl.tmbundle Syntaxes/Perl.plist ./syntaxes/perl.tmLanguage.json"
  },
  "contributes": {
    "languages": [
      {
        "id": "perl",
        "aliases": [
          "Perl",
          "perl"
        ],
        "extensions": [
          ".pl",
          ".pm",
          ".pod",
          ".t",
          ".PL",
          ".psgi"
        ],
        "firstLine": "^#!.*\\bperl\\b",
        "configuration": "./perl.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "perl",
        "scopeName": "source.perl",
        "path": "./syntaxes/perl.tmLanguage.json",
        "unbalancedBracketScopes": [
          "variable.other.predefined.perl"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}
